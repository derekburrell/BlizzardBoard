<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/profile_detail_container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.team6.teamrocket.blizzardboard.Profile"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userIcon"
        android:layout_gravity="center_horizontal|top"
        android:padding="35dp"
        android:cropToPadding="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/curUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:text="Medium Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        android:layout_below="@+id/userIcon"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/list_of_bulletins"
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        android:layout_below="@+id/curUser"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
