<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/cork_board2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team6.teamrocket.blizzardboard.BulletinActivity">

    <TextView
        android:id="@+id/bulletin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bulletin_subject"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/bulletin_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bulletin_subject"
        android:text="user"
        android:textAllCaps="false"
        android:textColor="@color/com_facebook_button_send_background_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bulletin_desciption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bulletin_title"
        android:text="Desc"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/bulletin_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="date"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bulletin_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Subject"
        android:textSize="18sp" />

</RelativeLayout>
